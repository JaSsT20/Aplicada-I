@page "/ocupation"
@page "/ocupation/{OcupationId:int}"

@inject OcupationsBLL ocupationsBll

<style>
    .card{
        width: 500px;
    }
    #ocupations{
        width: 150px;
    }
    #search{
        height: 35px;
        width:80px;
    }
    .occupation-body {
        display: flex;
}
</style>

<EditForm Model="ocupation" OnInvalidSubmit="Save">
    <div class="card">
        <div class="card-header">
            <h1>Registro de ocupaciones</h1>
        </div>

        <div class="card-body">
            <label class="form-label">Ocupación</label>
            <div class="occupation-body">
                <InputNumber @bind-Value="ocupation.OcupationId" type="text" id="ocupations" class="form-control" />
                <button id="search" class="btn btn-info" @onclick="Search">Buscar</button><br>
            </div>
            <label class="form-label">Descripción</label>
            <InputText @bind-Value="ocupation.Description"  type="text" class="form-control" />
            <label class="form-label">Salario</label>
            <InputNumber @bind-Value="ocupation.Salary"  type="text" class="form-control" />
        </div>

        <div class="card-footer">
            <button type="button" class="btn btn-primary" @onclick="New">Nuevo</button>
            <button type="button" class="btn btn-success" @onclick="Save">Guardar</button>
            <button type="button" class="btn btn-danger" @onclick="Delete">Eliminar</button> 
        </div>
    </div>
</EditForm>
@code
{
    [Parameter]
    public int OcupationId { get; set; }

    public Ocupations ocupation { get; set; } = new Ocupations();
        protected override void OnInitialized()
        {
            if(OcupationId > 0)
            {
                this.ocupation.OcupationId = OcupationId;
                this.Search();
            }
        }
        void Search()
        {
            var occupationFound = ocupationsBll.Search(ocupation.OcupationId);
            if(occupationFound != null)
            {
                this.ocupation = occupationFound;
            }
        }

        void New()
        {
            this.ocupation = new Ocupations();
        }

        void Save()
        {
            if(!Validate())
            {
                return;
            }
            if(ocupationsBll.Save(this.ocupation))
                this.New();
        }

        bool Validate()
        {
            if(String.IsNullOrEmpty(ocupation.Description))
                return false;
            else
                return true;
        }
        void Delete()
        {
            if(ocupationsBll.Delete(ocupation))
                this.New();
        }
}